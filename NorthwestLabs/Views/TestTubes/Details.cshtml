@model NorthwestLabs.Models.TestTube

@{
    ViewBag.Title = "Details";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>

        body {
            font-family: "Lato", sans-serif;
        }

        /* Fixed sidenav, full height */


        /* On mouse-over */
        .sidenav a:hover, .dropdown-btn:hover {
            color: #f1f1f1;
        }

        /* Main content */
        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            font-size: 20px; /* Increased text to enable scrolling */
            padding: 0px 10px;
        }

        /* Add an active class to the active dropdown button */
        .active {
            background-color: black;
            color: white;
        }

        /* Dropdown container (hidden by default). Optional: add a lighter background color and some left padding to change the design of the dropdown content */
        .dropdown-container {
            display: none;
            background-color: lightgray;
            padding-left: 8px;
        }

        /* Optional: Style the caret down icon */
        .fa-caret-down {
            float: right;
            padding-right: 8px;
        }
    </style>
</head>
<body>
    <div class="sidenav">

        <a href="#">@Html.ActionLink("Schedule Tests", "scheduleTests", "Singapore")</a>
        <a href="#">@Html.ActionLink("View Schedule", "viewSchedule", "Singapore")</a>
        <a href="#">@Html.ActionLink("Test Tube Status", "Index", "TestTubes")</a>
        <a href="#">@Html.ActionLink("Query Test Tube", "Query", "TestTubes")</a>


    </div>
    <div class="main">
        <div style="margin-top: 0px; margin-left: 20px; margin-right: 20px;">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Compound.CompoundDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Compound.CompoundDescription)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TestTubeStatus.TestTubeStatusDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TestTubeStatus.TestTubeStatusDescription)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TestTubeID)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TestTubeID)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Concentration)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Concentration)
                </dd>

            </dl>
        </div>
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.TestSerialNumber }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
    <script>
        /* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var i;

        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }</script>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


