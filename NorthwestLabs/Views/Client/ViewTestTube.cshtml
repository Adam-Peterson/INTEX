@model IEnumerable<NorthwestLabs.Models.TestTube>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>

        body {
            font-family: "Lato", sans-serif;
        }

        /* Fixed sidenav, full height */


        /* On mouse-over */
        .sidenav a:hover, .dropdown-btn:hover {
            color: #f1f1f1;
        }

        /* Main content */
        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            font-size: 20px; /* Increased text to enable scrolling */
            padding: 0px 10px;
        }

        /* Add an active class to the active dropdown button */
        .active {
            background-color: black;
            color: white;
        }

        /* Dropdown container (hidden by default). Optional: add a lighter background color and some left padding to change the design of the dropdown content */
        .dropdown-container {
            display: none;
            background-color: lightgray;
            padding-left: 8px;
        }

        /* Optional: Style the caret down icon */
        .fa-caret-down {
            float: right;
            padding-right: 8px;
        }
    </style>
</head>
<body>
    <div class="sidenav">
        <button class="dropdown-btn">
            View Catalogs
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="#">
                @Html.ActionLink("Pharmocology Catalog", "PharmocologyCatalog", "Client")
            </a>
            <a href="#">@Html.ActionLink("Protocol Notebook", "ProtocolNotebook")</a>
        </div>
        <button class="dropdown-btn">
            Work Order
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="#"> @Html.ActionLink("Get Quotes/Place Order", "GetQuote")</a>
            <a href="#">@Html.ActionLink("View Work Orders", "ViewWorkOrders", "Client")</a>
        </div>
        <button class="dropdown-btn">
            Reports
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="#"> @Html.ActionLink("Request Specialized Report", "RequestSpecializedReport")</a>
            <a href="#">@Html.ActionLink("View Report", "ViewReport")</a>
        </div>
        <a href="#">@Html.ActionLink("View Account", "Account")</a>

    </div>
    <div class="main">
        <center>
            <div style="margin-top: 0px; margin-left: 20px; margin-right: 20px;">

                <p>
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Compound.CompoundDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TestTubeStatus.TestTubeStatusDescription)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TestTubeID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Concentration)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Compound.CompoundDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TestTubeStatus.TestTubeStatusDescription)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TestTubeID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Concentration)
                                </td>
                                <td></td>
                            </tr>
                        }

                    </table>                </p>
            </div>
        </center>
    </div>
    <script>
/* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var i;

        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }</script>
</body>
</html>