@model NorthwestLabs.Models.Compound

@{
    ViewBag.Title = "GetQuote";
}

<head>
    <script src="~/Scripts/MyScript.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Content/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        /* Fixed sidenav, full height */


        /* On mouse-over */
        .sidenav a:hover, .dropdown-btn:hover {
            color: #f1f1f1;
        }

        /* Main content */
        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            font-size: 20px; /* Increased text to enable scrolling */
            padding: 0px 10px;
        }

        /* Add an active class to the active dropdown button */
        .active {
            background-color: black;
            color: white;
        }

        /* Dropdown container (hidden by default). Optional: add a lighter background color and some left padding to change the design of the dropdown content */
        .dropdown-container {
            display: none;
            background-color: lightgray;
            padding-left: 8px;
        }

        /* Optional: Style the caret down icon */
        .fa-caret-down {
            float: right;
            padding-right: 8px;
        }
    </style>
</head>
<body>

    <div class="sidenav">
        <button class="dropdown-btn">
            View Catalogs
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="#">
                @Html.ActionLink("Pharmocology Catalog", "PharmocologyCatalog", "Client")
            </a>
            <a href="#">@Html.ActionLink("Protocol Notebook", "ProtocolNotebook")</a>
        </div>
        <button class="dropdown-btn">
            Work Order
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="#"> @Html.ActionLink("Get Quotes/Place Order", "GetQuote")</a>
            <a href="#">@Html.ActionLink("View Work Orders", "ViewWorkOrders", "Client")</a>
        </div>
        <button class="dropdown-btn">
            Reports
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a href="#"> @Html.ActionLink("Request Specialized Report", "RequestSpecializedReport")</a>
            <a href="#">@Html.ActionLink("View Report", "ViewReport")</a>
        </div>
        <a href="#">@Html.ActionLink("View Account", "Account")</a>

    </div>
    <div class="main">
        <center>
            <div class="jumbotron grid-single" style="margin-top: 0px; margin-left: 20px; margin-right: 20px;">
                <p class="lead h2 text-center">
                    Each order has a $50 base charge<br />
                    @using (Html.BeginForm("GetQuote", "Client"))
                    {
                        <text>Select a Compound:</text>@Html.DropDownList("LTNumber", null, htmlAttributes: new { @class = "form-control" })
                        <text>Or Create a New Compound:</text>@Html.ActionLink("Create", "Create", "Compounds");<br /><br />
                        @Html.Raw("BiochemicalPharmacology ")<input type="checkbox" name="Assay1" value="true" id="Assay1" onclick="myFunction();" />
                        <div id="box" style="display:none">
                            @Html.Raw("(Required) Test 1: $10-$20 ")<input type="checkbox" name="Assay1Test1" value="true" id="Assay1Test1" disabled checked /><br />
                            @Html.Raw("(Required) Test 2: $15-$30 ")<input type="checkbox" name="Assay1Test2" value="true" id="Assay1Test2" disabled checked /><br />
                            @Html.Raw("(Optional) Test 3: $35-$70 ")<input type="checkbox" name="Assay1Test3" value="true" id="Assay1Test3" />
                        </div><br />
                        @Html.Raw("ProfilingScreen ")<input type="checkbox" name="Assay2" value="true" id="Assay2" onclick="myFunction2();" />
                        <div id="box2" style="display:none">
                            @Html.Raw("(Required) Test 1: $20-$40 ")<input type="checkbox" name="Assay2Test1" value="true" id="Assay2Test1" disabled checked /><br />
                            @Html.Raw("(Optional) Test 2: $15-$30 ")<input type="checkbox" name="Assay2Test2" value="true" id="Assay2Test2" /><br />
                            @Html.Raw("(Optional) Test 3: $85-$170 ")<input type="checkbox" name="Assay2Test3" value="true" id="Assay2Test3" />
                        </div>
                        <br />
                        @Html.Raw("Order Comments: (Optional)  ")<input type="text" name="Ordercomments" id="comments" /> <br />
                        @Html.Raw("Cash Advance: (Optional)  ")<input type="text" name="cashAdvance" id="cashAdvance" /> <br />
                        <text>Due Date: (Optional)</text><input type="date" id="dueDate" name="dueDate"
                                                                value="yyyy-mm-dd"
                                                                -webkit-appearance: none;
                                                                min="2018-12-04" max="2019-01-31">
                        <br /><br /><br />
                        <input type="submit" />
                    }
                </p>

            </div>
        </center>
    </div>
    <script>
        /* Loop through all dropdown buttons to toggle between hiding and showing its dropdown content - This allows the user to have multiple dropdowns without any conflict */
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var i;

        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }</script>


</body>